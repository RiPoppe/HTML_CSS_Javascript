<script>
    //FUNCTIES
    //een gegroepeerd stukje code dat je kan aanroepen
    //van boven naar benede uitgevoerd
    //voorbeeld: vragen naar eten in een restaurant (metafor)
    var counter = 0

    function makeBoxGreen() {
        //alles tussen curly brackets= "codeblock"
        var p4 = document.getElementById('demo_table')
        p4.style.backgroundColor = 'green'
        
        console.log("box = green")
    }

    function makeBoxRoyalblue() {
        var p4 = document.getElementById('demo_table')
        p4.style.backgroundColor = 'royalblue'
        
        console.log("box is blue")

    }
    function changeColor() {
        
        makeBoxGreen()
        console.log("dit werkt")
       
    }
 
    function newDate() {
        console.log("testing")
        document.getElementById('top_text').innerHTML = Date()

    }
    //Javascript wordt van boven naar beneden uitgevoerd
    //Format: command();, puntcomma's hoeft niet perse 
    //alert("Hoi dit is mijn popup")
    //alert("tweede popup")
    //maak een tijdelijke waarde aan met de naam demo_table en die wijst naar element met ID demo_table
    function readValuesAdd() {
        var firstNum = document.getElementById('field1').value
        var firstCalc = parseInt(firstNum)
        var secondNum = document.getElementById('field2').value
        var secondCalc = parseInt(secondNum)
        var sum = firstCalc + secondCalc
        alert(sum)
    }
    function readValuesSub() {
        var firstNum = document.getElementById('field1').value
        var firstCalc = parseInt(firstNum)
        var secondNum = document.getElementById('field2').value
        var secondCalc = parseInt(secondNum)
        var sum = firstCalc - secondCalc
        alert(sum)
    }
    function readValuesMult() {
        var firstNum = document.getElementById('field1').value
        var firstCalc = parseInt(firstNum)
        var secondNum = document.getElementById('field2').value
        var secondCalc = parseInt(secondNum)
        var sum = firstCalc * secondCalc
        alert(sum)
    }
    function readValuesDiv() {
        var firstNum = document.getElementById('field1').value
        var firstCalc = parseInt(firstNum)
        var secondNum = document.getElementById('field2').value
        var secondCalc = parseInt(secondNum)
        var sum = firstCalc / secondCalc
        alert(sum)
    }
 
</script>

